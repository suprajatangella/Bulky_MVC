@page
@model RazorPageProjectTemp.Pages.Categories.IndexModel

<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-primary">
            Category List
        </h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="categories/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Add New Category
        </a>
    </div>
</div>

<div class="container">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
        @foreach (Category objCat in Model)
        {
            <tr>
                <td>
                    @objCat.Name
                </td>
                <td>
                    @objCat.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="categories/edit" asp-route-id="@objCat.CategoryId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a><a asp-page="categories/delete" asp-route-id="@objCat.CategoryId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>