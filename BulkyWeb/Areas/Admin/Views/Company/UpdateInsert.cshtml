@model Company
<div class="card-header bg-secondary bg-gradient mt-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">@(Model.Id!=0?"Update":"Create") Company</h2>
        </div>
    </div>
</div>

<div class="card-body p-4">
    <form method="post" class="row" enctype="multipart/form-data">
        <input asp-for="@Model.Id" hidden />
       
        <div class="row">
            <div class="col-12">
                <div class="border p-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Name" type="text" class="form-control border-0 shadow" />
                        <label asp-for="@Model.Name" class="ms-2"></label>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.StreetAddress" type="text" class="form-control border-0 shadow"></input>
                        <label asp-for="@Model.StreetAddress" class="ms-2"></label>
                        <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.State" type="text" class="form-control border-0 shadow"></input>
                        <label asp-for="@Model.State" class="ms-2"></label>
                        <span asp-validation-for="@Model.State" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.City" type="text" class="form-control border-0 shadow" />
                        <label asp-for="@Model.City" class="ms-2"></label>
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.PhoneNumber" type="text" class="form-control border-0 shadow" />
                        <label asp-for="@Model.PhoneNumber" class="ms-2"></label>
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>

                  
                    <div class="row pt-2">
                        <div class="col-6">
                            @if (Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Edit</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }

                        </div>
                        <div class="col-6">
                            <a asp-controller="company" asp-action="index" class="btn btn-outline-secondary form-control">Back To Company List</a>
                        </div>
                    </div>

                </div>
            </div>
            
        </div>

    </form>

</div>

@section Scripts{
    @{
        
        <partial name="_ValidationScriptsPartial"
        ></partial>
    }
}
